{
  "manifest_version": 2,
  "name": "Linked",
  "description": "Shared links",
  "version": "1.0",
  "background": {
    "persistent": true,
    "scripts": ["src/socket.io.min.js", "src/app.js"]
  },
  "permissions": [
    "tabs",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Linked",
    "default_popup": "index.html"
  },
  "icons": {
    "1000": "./linked.png"
  }
}